{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "ESNext"
    ],
    "strict": true,
    "declaration": true,
    "outDir": "./lib",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "useDefineForClassFields": false,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./node_modules/@dimforge/rapier2d"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./lib",
    "./node_modules",
    "./examples"
  ]
}
