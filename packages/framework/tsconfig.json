{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "./lib",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./lib/index.d.ts",
    "./node_modules",
    "./.cache",
    ".pnpm"
  ]
}
